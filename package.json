{
  "name": "khan-ui",
  "version": "1.0.2",
  "description": "React UI components",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "pretest": "tsc --noEmit",
    "test": "echo \"Error: no test specified\" && exit 1",
    "posttest": "npm run format",
    "lint": "biome lint .",
    "lint:fix": "biome check --apply-unsafe ./src",
    "release": "npm run lint:fix && changelogen --release && npm run build && cd dist && npm publish && git push --follow-tags",
    "format": "biome format --write .",
    "clean": "rimraf ./dist",
    "type-check": "tsc --noEmit",
    "build:types": "tsc --emitDeclarationOnly",
    "build:transpile": "swc ./src -d ./dist --copy-files",
    "build:copy-package-json": "node scripts/build.cjs",
    "build": "npm-run-all type-check clean build:*",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "keywords": [],
  "author": "Ivan Khanevich <help@iamkhan.tech>",
  "license": "MIT",
  "type": "module",
  "dependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.4.1",
    "@storybook/addon-essentials": "7.6.4",
    "@storybook/addon-interactions": "7.6.4",
    "@storybook/addon-links": "7.6.4",
    "@storybook/addon-onboarding": "1.0.10",
    "@storybook/blocks": "7.6.4",
    "@storybook/react": "7.6.4",
    "@storybook/react-vite": "7.6.4",
    "@storybook/test": "7.6.4",
    "@swc/cli": "0.1.63",
    "@swc/core": "1.3.100",
    "@types/react": "18.2.43",
    "@types/react-dom": "18.2.17",
    "changelogen": "0.5.5",
    "npm-run-all": "4.1.5",
    "rimraf": "5.0.5",
    "storybook": "7.6.4",
    "typescript": "5.3.3"
  },
  "files": [
    "dist"
  ]
}